@page
@model TicTacToe.Pages.CheckerModel
@{
    ViewData["Title"] = "Checker";
}

<h2>Checker</h2>
<div id="boarder">
    @for(int y = 0; y<8; y++)
    {
        @for(int x = 0; x < 8; x++)
        {
            <div class="square @(x+y%2==0? "black":"red")">
                @if (@Model.Game.board[x, y] != null)
                {
                    <div class="checker @Model.Game.board[x,y].Turn" data-x="@x" data-y="@y"/> 
                }

            </div>
        }
    }
</div>
